{
  "name": "parallel-leaves",
  "version": "0.1.2",
  "description": "A standalone translation application.",
  "main": "electron-main.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/css/input.css -o ./dist/styles.css",
    "build:js:chapter-editor": "esbuild src/js/novel-planner/chapter-main.js --bundle --outfile=dist/chapter-editor-bundle.js --platform=browser",
    "build:js:codex-editor": "esbuild src/js/novel-planner/codex-entry-main.js --bundle --outfile=dist/codex-editor-bundle.js --platform=browser",
    "build:js:editor-iframe": "esbuild src/js/novel-planner/editor-iframe-main.js --bundle --outfile=dist/editor-iframe-bundle.js --platform=browser",
    "build": "npm run build:css && npm run build:js:chapter-editor && npm run build:js:codex-editor && npm run build:js:editor-iframe",
    "watch:css": "tailwindcss -i ./src/css/input.css -o ./dist/styles.css --watch",
    "watch:js:chapter-editor": "esbuild src/js/novel-planner/chapter-main.js --bundle --outfile=dist/chapter-editor-bundle.js --platform=browser --watch",
    "watch:js:codex-editor": "esbuild src/js/novel-planner/codex-entry-main.js --bundle --outfile=dist/codex-editor-bundle.js --platform=browser --watch",
    "watch:js:editor-iframe": "esbuild src/js/novel-planner/editor-iframe-main.js --bundle --outfile=dist/editor-iframe-bundle.js --platform=browser --watch",
    "watch": "concurrently \"npm:watch:css\" \"npm:watch:js:chapter-editor\" \"npm:watch:js:codex-editor\" \"npm:watch:js:editor-iframe\"",
    "start": "npm run build && electron .",
    "postinstall": "electron-rebuild",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac"
  },
  "author": "Ekim Emre Yardimli",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "daisyui": "^4.10.2",
    "electron": "^37.2.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electron-reloader": "^1.2.3",
    "esbuild": "^0.25.9",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "bootstrap-icons": "^1.13.1",
    "html-to-docx": "^1.8.0",
    "mammoth": "^1.10.0",
    "node-fetch": "^2.7.0",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-history": "^1.4.1",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-model": "^1.25.3",
    "prosemirror-schema-basic": "^1.2.4",
    "prosemirror-schema-list": "^1.5.1",
    "prosemirror-state": "^1.4.3",
    "prosemirror-view": "^1.40.1"
  },
  "build": {
    "appId": "com.locutusdeborg.parallelleaves",
    "productName": "Parallel Leaves",
    "copyright": "Copyright Â© 2024 Ekim Emre Yardimli",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "src/ai/**/*",
      "src/database/**/*",
      "src/js/**/*",
      "src/main/**/*",
      "src/utils/**/*",
      "electron-main.js",
      "preload.js",
      "config.js"
    ],
    "win": {
      "target": "portable",
      "icon": "public/assets/icon.png"
    },
    "mac": {
      "target": "zip",
      "icon": "public/assets/icon.png"
    }
  }
}
